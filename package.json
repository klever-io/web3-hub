{
  "name": "web3-hub",
  "version": "0.0.2",
  "description": "Make web3 more easily with agnostic library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "shx rm -rf ./dist",
