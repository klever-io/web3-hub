{
  "name": "web3-hub",
  "version": "0.3.3",
  "description": "Make web3 more easily with agnostic library",
  "source": "src/index.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "types": [
        "dist/types.d.ts"
      ]
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "shx rm -rf ./dist",
    "lint": "eslint ./src",
    "build": "pnpm clean && microbundle --visualize --tsconfig tsconfig.json --compress false --format cjs,esm",
    "test": "vitest run",
    "publish:latest": "pnpm build && npm publish --tag latest --access public",
    "build:test": "microbundle --visualise --tsconfig tsconfig.json"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/klever-io/web3-hub/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klever-io/web3-hub.git"
  },
  "keywords": [
    "blockchain",
    "substrate",
    "polkadot",
    "kusama",
    "web3",
    "typescript"
  ],
  "author": "Klever (https://klever.io)",
  "license": "MIT",
  "contributors": [
    {
      "name": "Wilson Macedo",
      "url": "https://github.com/wilmacedo"
    }
  ],
  "private": false,
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "microbundle": "^0.15.1",
    "prettier": "^3.2.5",
    "shx": "^0.3.4",
    "typescript": "^4.7.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "@polkadot/api": "^10.11.2",
    "@polkadot/extension-dapp": "^0.46.6",
    "@polkadot/util-crypto": "^12.6.2"
  }
}
